<?php

/**
 * Implements hook_install().
 */
function password_policy_install() {
  //set user timestamp to now
  $users = entity_load_multiple('user');
  $datetime = date("Y-m-d\TH:i:s\Z", time());
  foreach ($users as $user) {
    $user->set('field_last_password_reset', $datetime);
    $user->save();
  }
}